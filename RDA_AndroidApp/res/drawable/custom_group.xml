<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
           <gradient
                android:endColor="@color/SteelBlue"
                android:startColor="@color/SteelBlue"
                android:angle="270" />
            <stroke
                android:dashWidth="1sp"
                android:dashGap="2sp"
                android:width="1sp"
                android:color="#8b9eb2" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
        
    </item>

    <item android:state_focused="true" >
        <shape>
          <gradient
                android:endColor="@color/SteelBlue"
                android:startColor="@color/SteelBlue"
                android:angle="270" />
            <stroke
                android:dashWidth="1sp"
                android:dashGap="2sp"
                android:width="1sp"
                android:color="#8b9eb2" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>        
        <shape>
            
            <gradient
                android:endColor="@color/Blue"
                android:startColor="@color/Blue"
                android:angle="270" />
            <stroke
                android:dashWidth="1sp"
                android:dashGap="2sp"
                android:width="1sp"
                android:color="#8b9eb2" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
            
        </shape>
    </item>
</selector>